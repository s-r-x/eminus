{
  "name": "eminus",
  "description": "Range slider for React",
  "version": "1.0.4",
  "author": "Ilya Strus <strax1990@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/eminus.umd.js",
  "module": "./dist/eminus.es.js",
  "style": "./dist/style.css",
  "types": "./dist/types/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/s-r-x/eminus.git"
  },
  "bugs": {
    "url": "https://github.com/s-r-x/eminus/issues"
  },
  "homepage": "https://s-r-x.github.io/eminus",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "keywords": [
    "react",
    "range",
    "slider",
    "react-component"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build.code && npm run build.types",
    "build.types": "tsc -p tsconfig.build.json",
    "build.code": "vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.tsx src",
    "lint.strict": "eslint --ext .ts,.tsx src --max-warnings 0",
    "lint.fix": "eslint --ext .ts,.tsx --fix src",
    "test.unit": "NODE_ENV=test jest --maxWorkers=1",
    "test.unit.watch": "NODE_ENV=test jest --watch",
    "test.browser": "cypress run-ct",
    "test.browser.dashboard": "cypress open-ct",
    "check-types": "tsc",
    "storybook": "start-storybook -p 6006",
    "storybook.build": "build-storybook",
    "semantic-release": "semantic-release",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "clsx": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@cypress/react": "^5.9.4",
    "@cypress/vite-dev-server": "^2.0.8",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.0",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@storybook/addon-actions": "^6.4.0-alpha.32",
    "@storybook/addon-essentials": "^6.4.0-alpha.32",
    "@storybook/addon-links": "^6.4.0-alpha.32",
    "@storybook/react": "^6.4.0-alpha.32",
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/dom": "^8.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "babel-loader": "^8.2.2",
    "cypress": "^8.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.1.0",
    "less": "^4.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "semantic-release": "^18.0.0",
    "semantic-release-cli": "^5.4.4",
    "storybook-builder-vite": "^0.0.12",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2",
    "vite": "^2.5.1"
  }
}
